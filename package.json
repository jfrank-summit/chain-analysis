{
  "name": "chain-analysis",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "build": "tsc -b",
    "dev:stream": "tsc -b && yarn workspace @chain-analysis/ingest dev:stream",
    "dev:stream:consensus": "tsc -b && yarn workspace @chain-analysis/ingest dev:stream -- --chains=consensus",
    "dev:stream:auto-evm": "tsc -b && yarn workspace @chain-analysis/ingest dev:stream -- --chains=auto-evm",
    "dev:backfill": "tsc -b && yarn workspace @chain-analysis/ingest dev:backfill",
    "dev:backfill:consensus": "tsc -b && yarn workspace @chain-analysis/ingest dev:backfill -- --chain=consensus",
    "dev:backfill:auto-evm": "tsc -b && yarn workspace @chain-analysis/ingest dev:backfill -- --chain=auto-evm",
    "start:stream": "tsc -b && yarn workspace @chain-analysis/ingest start -- stream",
    "start:backfill": "tsc -b && yarn workspace @chain-analysis/ingest start -- backfill",
    "start:stream:consensus": "tsc -b && yarn workspace @chain-analysis/ingest start -- stream --chains=consensus",
    "start:stream:auto-evm": "tsc -b && yarn workspace @chain-analysis/ingest start -- stream --chains=auto-evm",
    "start:backfill:consensus": "tsc -b && yarn workspace @chain-analysis/ingest start -- backfill --chain=consensus",
    "start:backfill:auto-evm": "tsc -b && yarn workspace @chain-analysis/ingest start -- backfill --chain=auto-evm",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  }
}
