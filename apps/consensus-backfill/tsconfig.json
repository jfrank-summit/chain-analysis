{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@chain-analysis/config": ["../../packages/config/src"],
      "@chain-analysis/chain": ["../../packages/chain/src"],
      "@chain-analysis/storage": ["../../packages/storage/src"]
    }
  },
  "include": ["src"]
}
